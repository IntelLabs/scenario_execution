import osc.helpers
import osc.ros

scenario test_ros_service_call_blocking:
    timeout(30s)
    do parallel:
        test: serial:
            service_call() with:
                keep(it.service_name == '/bla_service')
                keep(it.service_type == 'std_srvs.srv.SetBool')
                keep(it.data == '{\"data\": True}')
            wait elapsed(10s)
            emit end
