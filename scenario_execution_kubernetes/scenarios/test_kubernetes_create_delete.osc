import osc.standard
import osc.kubernetes

scenario test_kubernetes_create_from_yaml:
   
    do parallel:
        serial:
            kubernetes_create_from_yaml() with:
                keep(it.yaml_file == "/config/test.yaml")
            kubernetes_delete() with:
                keep(it.target == "test")
                keep(it.element_type == "Pod")
            emit end
        time_out: serial:
            wait elapsed(60s)
            time_out_shutdown: emit fail
