import osc.gazebo

scenario test_spawn_xacro_with_parameters:
        
    test_obstacle: osc_actor with:
        keep(it.model == 'scenario_execution_gazebo://models/box.sdf.xacro')

    do parallel:
        test_obstacle.spawn() with:
            keep(it.spawn_pose.position.z == 2m)
            keep(it.world_name == 'maze')
            keep(it.xacro_arguments == 'box_width_length:=1 1,box_height:=2')
        test_case: serial:
            test: actor_exists() with:
                keep(it.world_name == 'maze')
                keep(it.name == 'test_obstacle')
            success: emit end
        time_out: serial:
            wait elapsed(30s)
            time_out_shutdown: emit fail
